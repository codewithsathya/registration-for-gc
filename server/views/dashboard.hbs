<div class="container mt-4">
    <form id='mainForm'>
        <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Choose competition</label>
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" required>
            <option selected>Choose...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>

        <div class="form-check form-check-inline my-1">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="individual"
                checked>
            <label class="form-check-label" for="inlineRadio1">Individual</label>
        </div>
        <div class="form-check form-check-inline my-1">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="team">
            <label class="form-check-label" for="inlineRadio2">Team</label>
        </div>
        <div id="teamlabel"></div>
        <div id="teammates"></div>
        <div id="addButton"></div>
        <button type="submit" class="btn btn-primary my-1">Submit</button>
    </form>

</div>
<script type="text/javascript">
    var radioForType = document.forms['mainForm'].elements['inlineRadioOptions'];
    var teammates = document.getElementById('teammates');
    var addbutton = document.getElementById('addButton');
    var teamlabel = document.getElementById('teamlabel');
    var teamlabelElement = `<label class="my-1 mr-2" id="teamlabel">Enter Teammates' email address</label>`;
    var teammateElement = `<div class="input-group mb-3"><input type="text" class="form-control" placeholder="Email">
                            <div class="input-group-append">
                                <button class="btn btn-danger" type="button">delete</button>
                            </div></div>`;
    var addTeammateButtonElement = `<button type="button" class="btn btn-sm btn-primary my-1" id="addTeammate">Add teammate</button>`;
    for (var i = 0, len = radioForType.length; i < len; i++) {

        radioForType[i].onchange = function () {
            if (radioForType.value == 'team') {
                teamlabel.innerHTML = teamlabelElement;
                teammates.innerHTML = teammateElement;
                addbutton.innerHTML = addTeammateButtonElement;
                document.getElementById('addTeammate').addEventListener("click", addTeammate);
            }
            if (radioForType.value == 'individual') {
                teamlabel.innerHTML = '';
                teammates.innerHTML = '';
                addbutton.innerHTML = ''
            }
        };
    }
    function addTeammate() {
        console.log("Hello");
        teammates.innerHTML += teammateElement;
    }
</script>